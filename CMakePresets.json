{
    "version": 8,
    "configurePresets": [
        {
            "name": "x86_64-linux-gcc",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x86_64-linux-gcc.cmake"
            }
        },
        {
            "name": "x86_64-linux-clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x86_64-linux-clang.cmake"
            }
        },
        {
            "name": "x86_64-windows-msvc",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/toolchains/x86_64-windows-msvc.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x86_64-linux-gcc-debug",
            "configurePreset": "x86_64-linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "x86_64-linux-gcc-release",
            "configurePreset": "x86_64-linux-gcc",
            "configuration": "Release"
        },
        {
            "name": "x86_64-linux-clang-debug",
            "configurePreset": "x86_64-linux-clang",
            "configuration": "Debug"
        },
        {
            "name": "x86_64-linux-clang-release",
            "configurePreset": "x86_64-linux-clang",
            "configuration": "Release"
        },
        {
            "name": "x86_64-windows-msvc-debug",
            "configurePreset": "x86_64-windows-msvc",
            "configuration": "Debug"
        },
        {
            "name": "x86_64-windows-msvc-release",
            "configurePreset": "x86_64-windows-msvc",
            "configuration": "Release"
        }
    ]
}